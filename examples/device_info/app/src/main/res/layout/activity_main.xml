<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/Table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="150dp"
        android:gravity="center">

        <TableRow>

            <TextView
                android:paddingRight="50dip"
                android:text="Model"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Model"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingRight="50dip"
                android:text="Manufacturer"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Manufacturer"
                style="@style/TextAppearance" />
        </TableRow>

        <View android:layout_height="20dip" />

        <TableRow>

            <TextView
                android:paddingRight="50dip"
                android:text="PSN"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/PSN"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_software_version">

            <TextView
                android:paddingRight="50dip"
                android:text="Software version"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Software_version"
                style="@style/TextAppearance" />
        </TableRow>

        <View android:layout_height="20dip" />

        <TableRow
            android:id="@+id/Row_Eth0_MAC_address">

            <TextView
                android:paddingRight="50dip"
                android:text="Eth0 MAC address (Ethernet)"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Eth0_MAC_address"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Eth0_Operstate"
                android:text="\t(Unknown)"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingRight="50dip"
                android:text="Wlan0 MAC address (WiFi)"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Wlan0_MAC_address"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Wlan0_Operstate"
                android:text="\t(Unknown)"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingRight="50dip"
                android:text="Wpan0 MAC address (Bluetooth)"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/Wpan0_MAC_address"
                style="@style/TextAppearance" />
        </TableRow>

        <View android:layout_height="20dip" />

        <TableRow>

            <TextView
                android:paddingRight="50dip"
                android:text="DIP Switch Camera"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/DIP_Switch_Camera"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingRight="50dip"
                android:text="DIP Switch Microphone"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/DIP_Switch_Microphone"
                style="@style/TextAppearance" />
        </TableRow>

        <View android:layout_height="20dip" />

        <TableRow
            android:id="@+id/Row_NAPOE_Title">

            <TextView
                android:paddingRight="50dip"
                android:text="Ethernet adapter information"
                style="@style/TextAppearance" />
        </TableRow>
        <TableRow
            android:id="@+id/Row_NAPOE_ProductName">

            <TextView
                android:paddingRight="50dip"
                android:text="\t\tProduct name"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/NAPOE_ProductName"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_NAPOE_Manufacturer">

            <TextView
                android:paddingRight="50dip"
                android:text="\t\tManufacturer"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/NAPOE_Manufacturer"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_NAPOE_PSN">

            <TextView
                android:paddingRight="50dip"
                android:text="\t\tSerial number"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/NAPOE_PSN"
                style="@style/TextAppearance" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_NAPOE_Version">

            <TextView
                android:paddingRight="50dip"
                android:text="\t\tVersion"
                style="@style/TextAppearance" />

            <TextView
                android:id="@+id/NAPOE_Version"
                style="@style/TextAppearance" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>